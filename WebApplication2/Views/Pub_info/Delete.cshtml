@model WebApplication2.Models.pub_info

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>publisher</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.publisher.pub_name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.publisher.pub_name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.logo)
        </dt>

        <dd>
            @if(Model!= null &&Model.publisher.pub_info != null && Model.logo != null)
            {
                <img class="img-responsive" src=@Url.Action("Logo","Publishers",new { id = Model.pub_id })>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pr_info)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pr_info)
        </dd>

       

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        if (ViewBag.Message != null)
        {
            <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Message");
                window.location.replace("/Publishers");
            };

            </script>
        }
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index","Publishers")
        </div>
    }
</div>
