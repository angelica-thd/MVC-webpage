@{
    ViewBag.Title = "Home Page";
}


    <div class="jumbotron text-center"
         style=" background-image: url('https://dailyhellas.com/wp-content/uploads/2019/04/bookstore-slide-2MCD-superJumbo.jpg');
      height: 400px;
    ">
        <h1 style="color: white;">Bookstore_name for employees.</h1>
        <p class="lead" style="color: white;">Bookstore_name details handling webpage for employees.</p>
        <input type="button" class="btn btn-primary btn-lg" value="Handle orders" onclick="location.href='@Url.Action("Index", "Sales")'" />
    </div>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img style="width: 100%; margin: auto;" src="https://www.genathomas.com/uploads/2/2/0/3/2203180/published/writing-1209121-1280.jpg?1559137858" alt="Handle Authors">
                    <div class="carousel-caption">
                        Handle Authors
                    </div>
                    <div class="img-overlay" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0; text-align: center;">
                        <input type="button" class="btn btn-primary btn-lg" value="Authors" onclick="location.href='@Url.Action("Index", "Authors")'" />
                    </div>
            </div>

            <div class="item">
                <img style="width: 100%; margin: auto;" src="https://www.becomeshakespeare.com/wp-content/uploads/2019/01/Blog-2-Listicles.jpg" alt="Handle Publishers">
                    <div class="carousel-caption">
                        Handle Publishers
                    </div>
                    <div class="img-overlay" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0; text-align: center;">
                        <input type="button" class="btn btn-primary btn-lg" value="Publishers" onclick="location.href='@Url.Action("Index", "Publishers")'" />
                    </div>
            </div>

            <div class="item">
                <img style="width: 100%; margin: auto;" src="https://cdn.elearningindustry.com/wp-content/uploads/2016/05/top-10-books-every-college-student-read-1024x640.jpeg" alt="Handle Books">
                    <div class="carousel-caption">
                        Handle Books
                    </div>
                    <div class="img-overlay" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0; text-align: center;">
                        <input type="button" class="btn btn-primary btn-lg" value="Books" onclick="location.href='@Url.Action("Index", "Titles")'" />
                    </div>
            </div>

            <div class="item">
                <img style="width: 100%; margin: auto;" src="https://media-cdn.tripadvisor.com/media/photo-s/12/76/01/e4/cartea-de-nisip-bookstore.jpg" alt="Handle Stores">
                    <div class="carousel-caption">
                    Handle Stores
                    </div>
                    <div class="img-overlay" style="position: absolute; top: 0; bottom: 0; left: 0; right: 0; text-align: center;">
                        <input type="button" class="btn btn-primary btn-lg" value="Stores" onclick="location.href='@Url.Action("Index", "Stores")'" />
                    </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>